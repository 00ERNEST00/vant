@import "./common/var.pcss";
@import "./mixins/border_retina.pcss";

@component-namespace z {
  @b cell-group {
    padding-left: 10px;
    position: relative;

    &::after {
      @mixin border-retina (top, bottom);
    }
  }

  @b cell {
    display: block;
    overflow: hidden;
    position: relative;
    padding: 10px 10px 10px 0;
    box-sizing: border-box;
    line-height: 22px;
    background-color: $c-white;
    color: #333;
    font-size: 14px;
    text-decoration: none;

    &::after {
      @mixin border-retina (bottom);
    }

    &:last-child {
      &::after {
        border-bottom: 0;
      }
    }

    @empty-cells: show title {
      float: left;
      overflow: hidden;
    }

    @e label {
      display: block;
      font-size: 12px;
      line-height: 1.2;
      color: #666;
    }

    @e value {
      float: right;
      overflow: hidden;

      @when link {
        margin-right: 20px;
      }
    }

    .zui-icon-arrow {
      position: absolute;
      top: 50%;
      right: 10px;
      transform: translateY(-50%);
      color: #999;
      font-size: 12px;
    }
  }
}
