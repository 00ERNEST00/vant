@import "./common/var.pcss";
@import "./mixins/border_retina.pcss";

@component-namespace z {
  @b field {
    width: 100%;
    overflow: hidden;

    @when textarea {
      .z-field__control {
        min-height: 60px;
      }
    }

    @when nolabel {
      .z-cell__title {
        display: none;
      }

      .z-cell__value {
        width: 100%;
        padding-left: 0;
      }
    }

    .z-cell__title,
    .z-cell__value {
      float: none;
      box-sizing: border-box;
    }

    .z-cell__title {
      width: 90px;
      position: absolute;
      top: 10px;
      left: 0;
    }

    .z-cell__value {
      width: 100%;
      padding-left: 90px;
    }

    @e control {
      border: 0;
      font-size: 14px;
      line-height: 22px;
      display: block;
      width: 100%;
      resize: none;
      outline: 0;
    }
  }
}
